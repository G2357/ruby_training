<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %>
      <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-dark rounded",local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class:"col-2 col-form-label text-white"%><br>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow", placeholder: "Enter a username"%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email , class:"col-2 col-form-label text-white"%><br>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter your Email"%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password , class:"col-2 col-form-label text-white"%><br>
          <div class="col-10">
            <%= f.password_field :password, rows:10, class: "form-control shadow", placeholder: "Choose a password"%>
          </div>
        </div>
        <div class="form-group d-flex flex-row-reverse">
          <%= link_to "Cancel", root_path, class: "btn btn-outline-danger btn-lg ml-2" %>
          <%= f.submit(@user.new_record? ? "Sign up" : "Update profile", class: "btn btn-outline-primary btn-lg") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
