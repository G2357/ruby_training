<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors"%>
      <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-dark rounded",local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class:"col-2 col-form-label text-white"%><br>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow", placeholder: "Title of article"%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description , class:"col-2 col-form-label text-white"%><br>
          <div class="col-10">
            <%= f.text_area :description, rows:10, class: "form-control shadow", placeholder: "Description of article"%>
          </div>
        </div>
        <div class="form-group d-flex flex-row-reverse">
          <%= link_to "Cancel", articles_path, class: "btn btn-outline-danger btn-lg ml-2" %>
          <%= f.submit class: "btn btn-outline-primary btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
